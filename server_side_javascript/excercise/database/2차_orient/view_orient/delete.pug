doctype html
html
    head
        meta(charset='utf-8')
    body
        h1 
            a(href='/topic') Server Side Javascript
        ul
            each topic1 in topics
                li  
                    - rid = encodeURIComponent(topic1['@rid'])
                    a(href='/topic/'+rid)=topic1.title
        article
            h1= 'Delete? '+topic.title
            - rid = encodeURIComponent(topic['@rid'])
            form(action='/topic/'+rid+'/delete' method='post')
                p=topic.title
                p=topic.description
                if topic.author
                    div='by '+topic.author
                p
                    input(type='submit' value='Yes')
                a(href='/topic/'+rid) No